<h1>Welcome <%= current_user.username %>!</h1>

<b>Your Feed!</b>
<div class="infinite-tweets">
  <ul id="feed">
  </ul>
  <a href="javascript:void(0)" class="fetch-more">Fetch More</a>
  <script type="text/template" id="feed-template">
    <%% tweets.forEach(function (tweet) { %>
     <li> <a href="/users/<%%= tweet.user.id %>">
       <%%= tweet.user.username %>
       </a>
       : <%%= tweet.content %>
       | <%% tweet.mentions.forEach(function (mention) {%>
         <a href="/users/<%%= mention.user.id%>">
         <%%= mention.user.username %></a>
         <%% }) %>
         <%%= moment(tweet.created_at).fromNow() %> </li>
    <%%  }); %>
  </script>
</div>

<%= render "tweets/form" %>
